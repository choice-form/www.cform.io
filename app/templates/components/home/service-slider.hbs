<div local-class="wrapper">
  <header local-class="optional-heading">
    <h2>Services</h2>
    <p>There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour, or randomised words which don't look even slightly believable.</p>
  </header>
  <div class="swiper-container" local-class="container">
    <div class="swiper-wrapper" local-class="slide-wrapper">
      {{#each services as |s|}}
        <section class="swiper-slide" local-class="slide">
          <div local-class="content">
            <h2>{{s.title}}</h2>
            <p>{{s.description}}</p>
          </div>
          <div local-class="image">
            <img src={{s.image}}>
          </div>
        </section>
      {{/each}}
    </div>
    <div local-class="pagination"></div>
  </div>
</div>
